<div class="recommended" markdown="1">

<script type="text/javascript">

var OSName="unknown OS";
if (navigator.appVersion.indexOf("Win") != -1) OSName="Windows";
if (navigator.appVersion.indexOf("Mac") != -1) OSName="MacOS";
if (navigator.appVersion.indexOf("Linux") != -1) OSName="Linux";
if (navigator.userAgent.toLowerCase().indexOf("android") != -1) OSName="Android";

var msg = "Unknown"

if (OSName == "Linux") {
	msg = "<p>You appear to be running Linux. The following download options are available for Linux:</p>"
		+ "<p><a class=\"button\" href=\"/getting-opensesame/download#ubuntu\">Ubuntu/ Debian package</a></p>"
		+ "<p><a class=\"button\" target=\"_blank\" href=\"https://aur.archlinux.org/packages/opensesame/\" >Arch Linux package</a></p>";
} else if (OSName == "Windows") {
	msg = "<p>You appear to be running Windows. The following download option is recommended:</p>"
		+ "<p><a class=\"button\" target=\"_blank\" href=\"$url-windows-exe-py2$\" >Windows XP/Vista/7 installer (.exe)</a></p>";
} else if (OSName == "MacOS") {
	msg = "<p>You appear to be running Mac OS. Installation instructions can be found here:</p>"
		+ "<p><a class=\"button\" href=\"/getting-opensesame/download#macos\">Mac OS package (.dmg)</a></p>";
} else if (OSName == "Android") {
	msg = "<p>You appear to be running Android. Installation instructions can be found here:</p>"
		+ "<p><a class=\"button\" href=\"/getting-opensesame/android\">OpenSesame runtime for Android</a></p>";
} else {
	msg = "<p>We couldn't recommend a download, because we couldn't detect your operating system.</p>"
		+ "<p>But don't worry, you can select a download yourself!";
}

document.write(msg);

</script>

</div>
